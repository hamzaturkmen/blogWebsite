<%- include("partials/header"); -%>

<h1>Edit</h1>
<form action="/editPublish" method="post">
  <div class="form-group">
    <label>Title</label>
    <textarea class="form-control" name="postTitle"><%= postTitle %></textarea>

    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="4" cols="50"><%= postBody %></textarea>
    <input hidden type="text" name="editPostId" value=<%= editPostId %>>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>
